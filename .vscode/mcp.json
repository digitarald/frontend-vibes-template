{
  "servers": {
    "perplexity": {
      "command": "npx",
      "args": ["-y", "server-perplexity-ask"],
      "env": {
        "PERPLEXITY_API_KEY": "${input:perplexity_api_key}"
      }
    }
  },
  "inputs": [
    {
      "id": "perplexity_api_key",
      "type": "promptString",
      "description": "Perplexity API Key",
      "password": true
    }
  ]
}
