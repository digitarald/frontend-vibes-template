{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Next.js: Dev Server",
      "type": "npm",
      "script": "dev",
      "problemMatcher": ["$tsc-watch"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Run Next.js development server with hot reloading",
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "focus": false,
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "ESLint: Lint",
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "group": "test",
      "detail": "Run ESLint via npm run lint",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
